<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:text="@string/winMessage"
        android:textSize="20sp"
        android:fontFamily="@font/pokefont"
        app:layout_constraintBottom_toBottomOf="@+id/winText"
        app:layout_constraintStart_toEndOf="@+id/winText"
        app:layout_constraintTop_toTopOf="@+id/winText" />

    <ImageView
        android:id="@+id/winText"
        android:layout_width="141dp"
        android:layout_height="105dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:contentDescription="@string/win_dialog_description"
        android:fontFamily="@font/pokefont"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/profoak" />
</androidx.constraintlayout.widget.ConstraintLayout>